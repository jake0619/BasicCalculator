<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B5442"
    android:padding="10dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/buttonsRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rounded_corner_gray"
        android:padding="10dp">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonOne"
            android:text="2"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonTwo"
            android:text="3"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonOne"
            android:text="4"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonTwo"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonFour"
            android:text="5"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonThree"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonFive"
            android:text="6"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonFour"
            android:text="7"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonFive"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonSeven"
            android:text="8"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSix"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonEight"
            android:text="9"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSeven"
            android:text="+"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonEight"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonPlus"
            android:text="0"
            android:textSize="25dp" />


        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonNine"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonZero"
            android:text="C"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonPlus"
            android:text="-"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonZero"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonMinus"
            android:text="="
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonClear"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/buttonEquals"
            android:text="x"
            android:textSize="25dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/totalView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_top"
        android:paddingLeft="5dp"
        android:text="total"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/formulaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalView"
        android:background="@drawable/rounded_corner_bottoms"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/signText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formulaText"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/inputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signText"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner_top"
        android:paddingLeft="5dp"
        android:text="Input"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputView"
        android:background="@drawable/rounded_corner_bottoms"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text=""
        android:textColor="#7CA287" />


</RelativeLayout>
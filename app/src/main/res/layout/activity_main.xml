<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7c898b"
    android:padding="10dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/buttonsRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="#636564">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonOne"
            android:text="2" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonTwo"
            android:text="3" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonOne"
            android:text="4" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonTwo"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonFour"
            android:text="5" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonThree"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonFive"
            android:text="6" />

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonFour"
            android:text="7" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonFive"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonSeven"
            android:text="8" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSix"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonEight"
            android:text="9" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSeven"
            android:text="+" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonEight"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonPlus"
            android:text="=" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonNine"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/buttonEquals"
            android:text="C" />

    </RelativeLayout>

    <TextView
        android:id="@+id/formulaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d2cca1"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/signText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formulaText"
        android:layout_marginTop="10dp"
        android:background="#d2cca1"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signText"
        android:layout_marginTop="10dp"
        android:background="#d2cca1"
        android:hint="Here"
        android:textSize="50dp" />


</RelativeLayout>